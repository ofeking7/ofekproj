<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â±ï¸ Countdown Timer"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="24dp" />

        <!-- Timer Display -->
        <TextView
            android:id="@+id/tv_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01:00"
            android:textSize="72sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:fontFamily="monospace"
            android:layout_marginBottom="16dp" />

        <!-- Status Text -->
        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ready to start"
            android:textSize="18sp"
            android:textStyle="italic"
            android:textColor="@android:color/darker_gray"
            android:layout_marginBottom="24dp" />

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_marginBottom="32dp"
            android:progress="0"
            android:progressTint="@android:color/holo_blue_light" />

        <!-- Time Selection Buttons -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Time:"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- First row of time buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="12dp">

            <Button
                android:id="@+id/btn_10m"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:text="10m"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btn_15min"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:text="15m"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btn_20min"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:text="20m"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- Second row of time buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="12dp">

            <Button
                android:id="@+id/btn_30min"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:text="30m"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btn_1hour"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:text="1h"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btn_90min"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:text="90m"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- Custom time button -->
        <Button
            android:id="@+id/btn_custom"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_margin="4dp"
            android:text="Custom Time"
            android:textSize="16sp"
            android:layout_marginBottom="32dp" />

        <!-- Control Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btn_start"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:text="â–¶ï¸ START"
                android:textSize="18sp"
                android:textStyle="bold"
                android:backgroundTint="@android:color/holo_green_light" />

            <Button
                android:id="@+id/btn_pause"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:text="â¸ï¸ PAUSE"
                android:textSize="18sp"
                android:textStyle="bold"
                android:backgroundTint="@android:color/holo_orange_light"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_reset"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:text="ðŸ”„ RESET"
                android:textSize="18sp"
                android:textStyle="bold"
                android:backgroundTint="@android:color/holo_red_light" />

        </LinearLayout>

        <!-- Instructions -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="ðŸ’¡ Select a time preset above or use custom time, then press START to begin countdown"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:textAlignment="center"
            android:padding="8dp" />

    </LinearLayout>

</ScrollView>